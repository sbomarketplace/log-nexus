{
  "screenId": "settings",
  "route": "/settings",
  "accordionType": "multiple",
  "allowMultipleOpen": true,
  "selectDropdowns": {
    "present": false,
    "note": "No select dropdowns exist on Settings page - only accordion sections"
  },
  "sections": [
    {
      "id": "remove-ads",
      "type": "accordionItem",
      "value": "account",
      "title": "Remove Ads Subscription",
      "trigger": {
        "minHeightPx": 48,
        "padding": {
          "x": 16,
          "y": 16
        },
        "icon": {
          "name": "Shield",
          "sizePx": 16,
          "gapPx": 12,
          "color": "text-muted-foreground"
        },
        "label": {
          "fontSizePx": 16,
          "fontWeight": 400,
          "color": "text-foreground"
        },
        "chevron": {
          "name": "ChevronDown",
          "sizePx": 16,
          "rotationOpenDeg": 180,
          "hitTargetMinPx": 48,
          "position": "right"
        },
        "borderPx": 1,
        "radiusPx": 8
      },
      "content": {
        "paddingPx": {
          "top": 28,
          "sides": 16,
          "bottom": 16
        },
        "borderPx": 1,
        "radiusPx": 8,
        "innerCardPaddingPx": 16,
        "hasTopDivider": true,
        "dividerOpacity": 0.4
      },
      "animation": {
        "expandMs": 200,
        "collapseMs": 200,
        "expandEasing": "ease-out",
        "collapseEasing": "ease-in",
        "keyframes": {
          "down": "height: 0 → var(--radix-accordion-content-height)",
          "up": "height: var(--radix-accordion-content-height) → 0"
        }
      },
      "behavior": {
        "allowMultipleOpen": true,
        "keyboard": [
          "Enter toggles",
          "Space toggles", 
          "Arrow keys navigate between headers",
          "Home/End jump to first/last"
        ],
        "pointer": "Full header row clickable with cursor-pointer",
        "defaultState": "closed"
      },
      "a11y": {
        "trigger": [
          "role=button (via Radix)",
          "aria-expanded=true|false",
          "aria-controls=[content-id]"
        ],
        "region": [
          "role=region (via Radix)", 
          "aria-labelledby=[trigger-id]",
          "unique id for content panel"
        ]
      },
      "classes": {
        "section": "settings-section",
        "header": "settings-section-header", 
        "content": "settings-section-content cc-acc-content",
        "triggerSpacing": "padding: 16px",
        "icon": "h-4 w-4 text-muted-foreground",
        "chevron": "h-4 w-4",
        "iconGap": "gap-3"
      },
      "states": {
        "default": {
          "background": "hsl(var(--card))",
          "border": "1px solid hsl(var(--border))"
        },
        "hover": {
          "headerBackground": "hsl(var(--muted) / 0.5)"
        },
        "expanded": {
          "chevronTransform": "rotate(180deg)",
          "ariaExpanded": "true"
        }
      }
    },
    {
      "id": "data-storage",
      "type": "accordionItem", 
      "value": "data",
      "title": "Data & Storage",
      "trigger": {
        "minHeightPx": 48,
        "padding": {
          "x": 16,
          "y": 16
        },
        "icon": {
          "name": "Database",
          "sizePx": 16,
          "gapPx": 12,
          "color": "text-muted-foreground"
        },
        "label": {
          "fontSizePx": 16,
          "fontWeight": 400,
          "color": "text-foreground"
        },
        "chevron": {
          "name": "ChevronDown",
          "sizePx": 16,
          "rotationOpenDeg": 180,
          "hitTargetMinPx": 48,
          "position": "right"
        },
        "borderPx": 1,
        "radiusPx": 8
      },
      "content": {
        "paddingPx": {
          "top": 28,
          "sides": 16,
          "bottom": 16
        },
        "borderPx": 1,
        "radiusPx": 8,
        "componentRendered": "DataStorageCard",
        "hasTopDivider": true,
        "dividerOpacity": 0.4
      },
      "animation": {
        "expandMs": 200,
        "collapseMs": 200,
        "expandEasing": "ease-out",
        "collapseEasing": "ease-in",
        "keyframes": {
          "down": "height: 0 → var(--radix-accordion-content-height)",
          "up": "height: var(--radix-accordion-content-height) → 0"
        }
      },
      "behavior": {
        "allowMultipleOpen": true,
        "keyboard": [
          "Enter toggles",
          "Space toggles",
          "Arrow keys navigate between headers", 
          "Home/End jump to first/last"
        ],
        "pointer": "Full header row clickable with cursor-pointer",
        "defaultState": "closed"
      },
      "a11y": {
        "trigger": [
          "role=button (via Radix)",
          "aria-expanded=true|false",
          "aria-controls=[content-id]"
        ],
        "region": [
          "role=region (via Radix)",
          "aria-labelledby=[trigger-id]", 
          "unique id for content panel"
        ]
      },
      "classes": {
        "section": "settings-section",
        "header": "settings-section-header",
        "content": "settings-section-content cc-acc-content", 
        "triggerSpacing": "padding: 16px",
        "icon": "h-4 w-4 text-muted-foreground",
        "chevron": "h-4 w-4",
        "iconGap": "gap-3"
      },
      "states": {
        "default": {
          "background": "hsl(var(--card))",
          "border": "1px solid hsl(var(--border))"
        },
        "hover": {
          "headerBackground": "hsl(var(--muted) / 0.5)"
        },
        "expanded": {
          "chevronTransform": "rotate(180deg)",
          "ariaExpanded": "true"
        }
      }
    },
    {
      "id": "support-legal",
      "type": "accordionItem",
      "value": "support",
      "title": "Support & Legal", 
      "specialCase": "Contains clickable row that opens modal instead of static content",
      "trigger": {
        "minHeightPx": 48,
        "padding": {
          "x": 16,
          "y": 16
        },
        "icon": {
          "name": "HelpCircle",
          "sizePx": 16,
          "gapPx": 12,
          "color": "text-muted-foreground"
        },
        "label": {
          "fontSizePx": 16,
          "fontWeight": 400,
          "color": "text-foreground"
        },
        "chevron": {
          "name": "ChevronDown",
          "sizePx": 16,
          "rotationOpenDeg": 180,
          "hitTargetMinPx": 48,
          "position": "right"
        },
        "borderPx": 1,
        "radiusPx": 8
      },
      "content": {
        "paddingPx": {
          "top": 28,
          "sides": 16,
          "bottom": 16
        },
        "borderPx": 1,
        "radiusPx": 8,
        "hasTopDivider": true,
        "dividerOpacity": 0.4,
        "innerRow": {
          "type": "linkRow",
          "title": "Support & Legal",
          "description": "Terms, Privacy, Contact Support, Rate App",
          "icon": {
            "name": "ChevronRight",
            "sizePx": 16,
            "color": "text-muted-foreground",
            "position": "right"
          },
          "padding": {
            "vertical": 12,
            "horizontal": 0
          },
          "action": {
            "kind": "modal", 
            "target": "SupportLegalModal",
            "trigger": "onClick={() => setSupportLegalOpen(true))"
          },
          "hover": {
            "background": "hover:bg-muted/20",
            "cursor": "cursor-pointer"
          },
          "classes": "settings-row cursor-pointer hover:bg-muted/20"
        }
      },
      "animation": {
        "expandMs": 200,
        "collapseMs": 200,
        "expandEasing": "ease-out",
        "collapseEasing": "ease-in",
        "keyframes": {
          "down": "height: 0 → var(--radix-accordion-content-height)",
          "up": "height: var(--radix-accordion-content-height) → 0"
        }
      },
      "behavior": {
        "allowMultipleOpen": true,
        "keyboard": [
          "Enter toggles accordion",
          "Space toggles accordion",
          "Arrow keys navigate between headers",
          "Home/End jump to first/last",
          "Enter/Space on inner row opens modal"
        ],
        "pointer": "Full header row clickable for accordion; inner row clickable for modal",
        "defaultState": "closed"
      },
      "a11y": {
        "trigger": [
          "role=button (via Radix)",
          "aria-expanded=true|false", 
          "aria-controls=[content-id]"
        ],
        "region": [
          "role=region (via Radix)",
          "aria-labelledby=[trigger-id]",
          "unique id for content panel"
        ],
        "innerRow": [
          "Interactive div with click handler",
          "Should have button role or be actual button for proper a11y"
        ]
      },
      "classes": {
        "section": "settings-section",
        "header": "settings-section-header",
        "content": "settings-section-content cc-acc-content",
        "triggerSpacing": "padding: 16px", 
        "icon": "h-4 w-4 text-muted-foreground",
        "chevron": "h-4 w-4",
        "iconGap": "gap-3",
        "innerRow": "settings-row cursor-pointer hover:bg-muted/20"
      },
      "states": {
        "default": {
          "background": "hsl(var(--card))",
          "border": "1px solid hsl(var(--border))"
        },
        "hover": {
          "headerBackground": "hsl(var(--muted) / 0.5)",
          "innerRowBackground": "bg-muted/20"
        },
        "expanded": {
          "chevronTransform": "rotate(180deg)",
          "ariaExpanded": "true"
        }
      }
    }
  ],
  "globalSettings": {
    "container": {
      "maxWidth": "max-w-4xl",
      "margin": "mx-auto",
      "spacing": "space-y-4"
    },
    "designTokens": {
      "colors": {
        "primary": "hsl(25 95% 53%)",
        "border": "hsl(220 13% 91%)", 
        "card": "hsl(0 0% 100%)",
        "muted": "hsl(220 13% 95%)",
        "mutedForeground": "hsl(220 9% 46%)",
        "foreground": "hsl(220 9% 15%)"
      },
      "spacing": {
        "headerPadding": "16px",
        "contentPadding": "16px base + 12px top",
        "iconGap": "12px",
        "sectionSpacing": "16px"
      },
      "typography": {
        "headerFont": "16px weight-400",
        "rowTitleFont": "14px weight-500",
        "rowDescFont": "12px"
      },
      "borders": {
        "width": "1px",
        "radius": "8px section, 12px inner cards"
      }
    },
    "animations": {
      "accordionDown": "accordion-down 0.2s ease-out",
      "accordionUp": "accordion-up 0.2s ease-in",
      "hoverTransition": "transition-colors"
    }
  }
}